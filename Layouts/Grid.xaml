<Window x:Class="Layouts.Grid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="Grid" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Button 1" FontSize="15" Grid.RowSpan="2"/>
        <Button Content="Button 2" FontSize="15" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="Button 3" FontSize="15" Grid.Column="2" Grid.Row="2"/>
        <Button Content="Button 4" FontSize="15" Grid.Column="2" Grid.Row="3"/>
        <Button Content="Button 3" FontSize="15" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" />
        <Button Content="Button 5" FontSize="15" Grid.Column="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
