<Window x:Class="Layouts.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="StackPanel" Height="150" Width="300" MinHeight="180" MinWidth="300">

    <StackPanel >
        <StackPanel Orientation="Horizontal">
        <Label Content="Feld 1" Width="100" FontSize="20" HorizontalAlignment="Left"/>
        <TextBox Width="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Feld 2" Width="100" FontSize="20" HorizontalAlignment="Left"/>
            <TextBox Width="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Feld 3" Width="100" FontSize="20" HorizontalAlignment="Left"/>
            <TextBox Width="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>
